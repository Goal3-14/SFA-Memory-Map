<UserControl x:Class="K5E_Memory_Map.UIModule.SelectedDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:K5E_Memory_Map.UIModule"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="556">


    <Grid Background="LightGray">
        <TextBlock Text="Selected Node " VerticalAlignment="Top" HorizontalAlignment="Left" Margin="1,0,0,0" FontSize="12"/>
        <TextBlock Text="{Binding Hash, StringFormat = 'Hash: {0}'}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="1,15,0,0" FontSize="12"/>
        <TextBlock Text="{Binding NodeTag, StringFormat = 'Tag: {0}'}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="00,30,0,0" FontSize="12"/>
        <TextBlock Text="{Binding Stated, StringFormat = 'State: {0}'}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="385,5,0,0" FontSize="12"/>
        <TextBlock Text="{Binding NodeText, StringFormat = 'Details: {0}'}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="1,45,0,0" FontSize="12"/>
        <TextBox Name ="TextInput" Height="17" Width="421" HorizontalAlignment="Left" Margin="2,62,0,1"/>
        <Button Height="17" Width="40" HorizontalAlignment="Left" Margin="423,62,0,1" Content="Save" FontSize="11" Click="SaveText"/>
        <Button Height="18" Width="70" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="466,4,0,0" Content="Load State" FontSize="11" Click="LoadState"/>
        <Button Height="16" Width="70" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="466,24,0,0" Content="Add Under" FontSize="11" Click="AddUnder"/>
        <Button Height="18" Width="70" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="466,42,0,0" Content="Delete Below" FontSize="11" Click="DelBelow"/>
        <Button Height="16" Width="70" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="466,62,0,0" Content="Delete" FontSize="11" Click="DelNode"/>

        <Button Name ="EdgeButton" Height="16" Width="70" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="393,24,0,0" Content="Del Edge" FontSize="11" Click="DelEdge"/>

    </Grid>
</UserControl>
